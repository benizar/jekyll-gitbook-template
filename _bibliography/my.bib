mendeley-tags = {C sharp,Fragstats,Free and open source software,Geographical information systems,Landscape metrics},
month = {may},
pages = {131--140},
publisher = {Elsevier Ltd},
title = {{A free and open source programming library for landscape metrics calculations}},
url = {http://dx.doi.org/10.1016/j.envsoft.2011.10.009 http://linkinghub.elsevier.com/retrieve/pii/S1364815211002209},
