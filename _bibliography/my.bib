@article{ramon2013evacuation,
  title = {A Methodology for Evacuation Route Planning inside Buildings Using Geospatial Technology},
  author = {Ram{\'o}n, A. and {Rodr{\'i}guez-Hidalgo}, A. B. and {Navarro-Carri{\'o}n}, J. T. and Zaragoz{\'i}, B.},
  year = {2013},
  journal = {WIT Transactions on Information and Communication Technologies},
