@article{gimenez-fontNuevasEvidenciasSobre2023,
  title = {{Nuevas evidencias sobre la calidad de la informaci\'on geogr\'afica contenida en las fuentes precatastrales: an\'alisis a partir de un cabreve del siglo XVIII}},
  shorttitle = {{Nuevas evidencias sobre la calidad de la informaci\'on geogr\'afica contenida en las fuentes precatastrales}},
  author = {{Gim{\'e}nez-Font}, Pablo and Zaragoz{\'i}, Benito},
