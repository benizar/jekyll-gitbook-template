}

@article{valenteLabourPrecarityVisitor2023,
  title = {Labour Precarity in the Visitor Economy and Decisions to Move Out},
  author = {Valente, Riccardo and Zaragoz{\'i}, Benito and Russo, Antonio Paolo},
